# A2A Network Configuration - PRODUCTION
# Generated for production environment - KEEP SECURE!

# Environment
A2A_ENVIRONMENT=production

# Security (Maximum security for production)
A2A_PRIVATE_KEY_ENCRYPTED=true
A2A_USE_HARDWARE_WALLET=false
A2A_REQUIRE_HTTPS=true
A2A_ENABLE_RATE_LIMITING=true
A2A_MAX_REQUESTS_PER_MINUTE=60
A2A_ALLOWED_ORIGINS=https://your-production-domain.com
A2A_ENABLE_CORS=false

# Network (Mainnet or production network)
A2A_NETWORK=mainnet
A2A_RPC_URL=https://your-secure-rpc-endpoint.com
A2A_WS_URL=wss://your-secure-ws-endpoint.com
A2A_CHAIN_ID=1
A2A_BLOCK_CONFIRMATIONS=12
A2A_GAS_STRATEGY=medium
A2A_MAX_GAS_PRICE=100.0
A2A_TIMEOUT_SECONDS=30

# Monitoring (Production observability)
A2A_ENABLE_METRICS=true
A2A_METRICS_PORT=9090
A2A_LOG_LEVEL=WARNING
A2A_LOG_FORMAT=json
A2A_ENABLE_TRACING=true
A2A_JAEGER_ENDPOINT=https://your-jaeger-endpoint.com
A2A_ENABLE_HEALTH_CHECKS=true
A2A_HEALTH_CHECK_INTERVAL=30

# Contracts (REPLACE WITH ACTUAL PRODUCTION DEPLOYED ADDRESSES!)
# Deploy contracts first, then update these addresses
A2A_AGENT_REGISTRY_ADDRESS=0x1234567890123456789012345678901234567890
A2A_MESSAGE_ROUTER_ADDRESS=0x2345678901234567890123456789012345678901
A2A_ORD_REGISTRY_ADDRESS=0x3456789012345678901234567890123456789012
A2A_DEPLOYMENT_BLOCK=18000000
A2A_ENABLE_UPGRADES=false
A2A_PROXY_ADMIN_ADDRESS=0x4567890123456789012345678901234567890123

# Private Keys (REPLACE WITH SECURE VALUES!)
# Generate with: python setup_cli.py generate-keys --environment production
# Use encrypted private keys or hardware wallets for production
A2A_AGENT_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Database (if using persistent storage)
DATABASE_URL=postgresql://user:pass@localhost:5432/a2a_network

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Monitoring integrations
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Backup and recovery
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key